<tr>
    <th style="text-align: center"><%= comment.user.username %></th>
    <th style="text-align: center"><%= comment.description %></th>
    <th style="text-align: center"><%= comment.rating %></th>
    <th style="text-align: center"><%= comment.restaurant.name %></th>
    <th style="text-align: left"><% comment.images.each do |image| %>
            <%= image_tag image, height: 50, width: 50%>
        <% end %>
    </th>
    <th style="text-align: center">
        <%= link_to " <i class='material-icons pull-right'>delete_forever</i>".html_safe, comment_admin_destroy_path(comment), method: :delete, data: {confirm: "Bạn chắc chắn chứ?"}, remote: true %>
    </th>
</tr>