<%= form_for @product, url: products_path do |f| %>

      <%= f.label :name%>
      <%= f.text_field :name %>

      <%= f.label :description%>
      <%= f.text_field :description %>

      <%= f.label :price%>
      <%= f.number_field :price %>

      <%= f.file_field :image%>

      <%= f.submit "Submit"%>
<% end %>
