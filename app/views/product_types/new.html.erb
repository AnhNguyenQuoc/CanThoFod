 <%# <meta http-equiv="Refresh" content="30"> %>
 <!-- Start Page Loading -->
      <div id="loader-wrapper">
            <div id="loader"></div>
            <div class="loader-section section-left"></div>
            <div class="loader-section section-right"></div>
      </div>
      <!-- End Page Loading -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START HEADER -->
     <%= render 'admin_restaurants/header' %>
      <!-- END HEADER -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START MAIN -->
      <div id="main">
            <!-- START WRAPPER -->
            <div class="wrapper">
                  <!-- START LEFT SIDEBAR NAV-->
                  <%= render 'admins/sidebar' %>
                  <!-- END LEFT SIDEBAR NAV-->
                  <!-- //////////////////////////////////////////////////////////////////////////// -->
                  <!-- START CONTENT -->
                  <section id="content">
                        <!--start container-->
                        <div class="container">
                              <!--card stats start-->
                              <div class="row">
                                    <div class="col s12">
                                         
                                          <div class="card">
                                                <div class="card-content">
                                                      <span class="card-title">Tạo loại sản phẩm</span>
                                                       <%= form_for @product_type, url: admin_loai_thuc_an_tao_moi_path do |f| %>
                                                            <%= render 'layout_extends/error', object: f.object %>
                                                            <div class="row">
                                                                  <div class="input-field col s12">
                                                                        <%= f.text_field :name, class: 'validate', :required => true, aria: {require: true}, oninvalid: "this.setCustomValidity('Nhập tên ở đây')", oninput: "this.setCustomValidity('')" %>
                                                                        <%= f.label :name, "Tên loại thức ăn", data: {error: "Vui lòng kiểm tra lại"}, class: "active"%>
                                                                  </div>
                                                                  <div class="row">
                                                                  <%= link_to "Trờ về", admin_loai_thuc_an_path, class: "waves-effect waves-teal btn-flat", method: :get %>
                                                                  <%= f.submit "Xác nhận", class: "btn waves-effect waves-light", style: "float: right; margin-right: 20px"%>
                                                                  </div>
                                                            </div>

                                                      <% end %>
                                                </div>
                                          </div>
                                    </div>
                              </div>
                             
                              <!-- //////////////////////////////////////////////////////////////////////////// -->
                        </div>
                        <!--end container-->
                  </section>
                  <!-- END CONTENT -->
                  <!-- START RIGHT SIDEBAR NAV-->

                  <!-- END RIGHT SIDEBAR NAV-->
            </div>
            <!-- END WRAPPER -->
      </div>
      <!-- END MAIN -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START FOOTER -->
      <%= render 'admin_restaurants/footer' %>


