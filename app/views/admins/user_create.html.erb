 <%# <meta http-equiv="Refresh" content="30"> %>
 <!-- Start Page Loading -->
      <div id="loader-wrapper">
            <div id="loader"></div>
            <div class="loader-section section-left"></div>
            <div class="loader-section section-right"></div>
      </div>
      <!-- End Page Loading -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START HEADER -->
     <%= render 'admin_restaurants/header' %>
      <!-- END HEADER -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START MAIN -->
      <div id="main">
            <!-- START WRAPPER -->
            <div class="wrapper">
                  <!-- START LEFT SIDEBAR NAV-->
                  <%= render 'admins/sidebar' %>
                  <!-- END LEFT SIDEBAR NAV-->
                  <!-- //////////////////////////////////////////////////////////////////////////// -->
                  <!-- START CONTENT -->
                  <section id="content">
                        <!--start container-->
                        <div class="container">
                              <!--card stats start-->
                              <div class="row">
                                    <div class="col s12">
                                         
                                          <div class="card blue-grey darken-1">
                                                <div class="card-content white-text">
                                                      <span class="card-title">Tạo mới người dùng</span>
                                                       <%= form_for :user do |f| %>
                                                            <div class="row">
                                                                  <div class="input-field col s12">
                                                                        <%= f.text_field :username, class: 'validate', :required => true, aria: {require: true}, oninvalid: "this.setCustomValidity('Nhập họ tên ở đây')", oninput: "this.setCustomValidity('')" %>
                                                                        <%= f.label :username, "Họ và tên", data: {error: "Vui lòng kiểm tra lại"} %>
                                                                  </div>
                                                            </div>


                                                            <div class="row">
                                                                  <div class="input-field col s12">
                                                                        <%= f.email_field :email, class: 'validate', :required => true, aria: {require: true}, oninvalid: "this.setCustomValidity('Nhập Email ở đây')", oninput: "this.setCustomValidity('')"%>
                                                                        <%= f.label :email, "Email", data: {error: "Vui lòng kiểm tra lại định dạng"} %>
                                                                  </div>
                                                            </div>

                                                            <div class="row">
                                                                  <div class="input-field col s12">
                                                                        <%= f.password_field :password, class: 'validate', :required => true, aria: {require: true}, oninvalid: "this.setCustomValidity('Nhập mật khẩu ở đây')", oninput: "this.setCustomValidity('')" %>
                                                                        <%= f.label :password, "Mật khẩu",data: {error: "Vui lòng kiểm tra lại"} %>
                                                                  </div>
                                                            </div>
                                                            
                                                            <div class="row">
                                                                  <div class="input-field col s12">
                                                                        <%= f.label :password_confirmation, "Xác nhận mật khẩu",data: {error: "Vui lòng kiểm tra lại"}  %>
                                                                        <%= f.password_field :password_confirmation, class: 'validate', :required => true, aria: {require: true}, oninvalid: "this.setCustomValidity('Nhập mật khẩu ở đây')", oninput: "this.setCustomValidity('')" %>
                                                                  </div>
                                                            </div>

                                                            <div class="row">
                                                                  <div class="input-field col s12">
                                                                        <%= f.label :phone, "SĐT", data: {error: "Vui lòng kiểm tra lại"} %>
                                                                        <%= f.phone_field :phone,  class: 'validate', :required => true, aria: {require: true}, oninvalid: "this.setCustomValidity('Nhập sđt ở đây')", oninput: "this.setCustomValidity('')" %>
                                                                  </div>
                                                            </div>

                                                            <div class="row">
                                                                  <div class="input-field col s12">
                                                                        <%= f.label :address, "Địa chỉ", data: {error: "Vui lòng kiểm tra lại"}  %>
                                                                        <%= f.text_field :address, class: 'validate', :required => true, aria: {require: true}, oninvalid: "this.setCustomValidity('Nhập địa chỉ ở đây')", oninput: "this.setCustomValidity('')" %>
                                                                  </div>
                                                            </div>
                                                            <div class="row">
                                                                  <div class="input-field col s12">
                                                                        <%= f.collection_select :district_id, District.all, :id, :name,  {prompt: "Chọn Quận"}, class: 'validate', :required => true, aria: {require: true} %>
                                                                  </div>
                                                            </div>
                                                            <div class="row">
                                                                  <div class="input-field col s12">
                                                                         <%= f.collection_select :role_id, Role.all, :id, :name,  {prompt: "Chọn chức danh"}, class: 'validate', :required => true, aria: {require: true} %>
                                                                  </div>
                                                            </div>
                                                            
                                                            <div class="row">
                                                                  <%= link_to "Trờ về", admin_danh_sach_nguoi_dung_path, class: "waves-effect waves-teal btn-flat", method: :get %>
                                                                  <%= f.submit "Xác nhận", class: "btn waves-effect waves-light", style: "float: right; margin-right: 20px"%>
                                                            </div>
                                                      <% end %>
                                                </div>
                                          </div>
                                    </div>
                              </div>
                             
                              <!-- //////////////////////////////////////////////////////////////////////////// -->
                        </div>
                        <!--end container-->
                  </section>
                  <!-- END CONTENT -->
                  <!-- START RIGHT SIDEBAR NAV-->

                  <!-- END RIGHT SIDEBAR NAV-->
            </div>
            <!-- END WRAPPER -->
      </div>
      <!-- END MAIN -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START FOOTER -->
      <%= render 'admin_restaurants/footer' %>


