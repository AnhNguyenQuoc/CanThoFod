 <%# <meta http-equiv="Refresh" content="30"> %>
 <!-- Start Page Loading -->
      <div id="loader-wrapper">
            <div id="loader"></div>
            <div class="loader-section section-left"></div>
            <div class="loader-section section-right"></div>
      </div>
      <!-- End Page Loading -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START HEADER -->
     <%= render 'admin_restaurants/header' %>
      <!-- END HEADER -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START MAIN -->
      <main>
      <div id="main">
            <!-- START WRAPPER -->
            <div class="wrapper">
                  <!-- START LEFT SIDEBAR NAV-->
                  <%= render 'admins/sidebar' %>
                  <!-- END LEFT SIDEBAR NAV-->
                  <!-- //////////////////////////////////////////////////////////////////////////// -->
                  <!-- START CONTENT -->
                  <section id="content">
                        <!--start container-->
                        <div class="container">
                              <!--card stats start-->
                              <div class="row">
                                    <div class="col s12">
                                         
                                          <div class="card">
                                                <div class="card-content">
                                                      <span class="card-title">Cập nhật thông tin</span>
                                                      <%= form_for @user do |f| %>
                        <%= render 'layout_extends/error', object: f.object %>
                                    <div class="row">
                        <div class="input-field col s12">
                              <%= f.text_field :username, class: 'validate', placeholder: "Tên của bạn", :required => true, aria: {require: true}, oninvalid: "this.setCustomValidity('Nhập họ tên ở đây')", oninput: "this.setCustomValidity('')" %>
                              <%= f.label :username, "Họ và tên", class: "active" ,data: {error: "Vui lòng kiểm tra lại"} %>
                        </div>
                  </div>


                  <div class="row">
                        <div class="input-field col s12">
                              <%= f.email_field :email, class: 'validate',disabled: true, :required => true, aria: {require: true}, oninvalid: "this.setCustomValidity('Nhập Email ở đây')", oninput: "this.setCustomValidity('')"%>
                              <%= f.label :email, "Email", class: "active" , data: {error: "Vui lòng kiểm tra lại định dạng"} %>
                        </div>
                  </div>
                        <div class="row">
                              <div class="input-field col s12">
                                    <%= f.password_field :password%>
                                    <%= f.label :password, "Mật khẩu" %>
                              </div>
                        </div>
                        
                        <div class="row">
                              <div class="input-field col s12">
                                    <%= f.label :password_confirmation, "Xác nhận mật khẩu"  %>
                                    <%= f.password_field :password_confirmation %>
                              </div>
                        </div>                     

                  <div class="row">
                        <div class="input-field col s12">
                              <%= f.label :phone, "SĐT",class: "active" , data: {error: "Vui lòng kiểm tra lại"} %>
                              <%= f.phone_field :phone,  class: 'validate', :required => true, aria: {require: true}, oninvalid: "this.setCustomValidity('Nhập sđt ở đây')", oninput: "this.setCustomValidity('')" %>
                        </div>
                  </div>

                  <div class="row">
                        <div class="input-field col s12">
                              <%= f.label :address, "Địa chỉ",class: "active" , data: {error: "Vui lòng kiểm tra lại"}  %>
                              <%= f.text_field :address, class: 'validate', :required => true, aria: {require: true}, oninvalid: "this.setCustomValidity('Nhập địa chỉ ở đây')", oninput: "this.setCustomValidity('')" %>
                        </div>
                  </div>
                  <div class="row">
                        <div class="input-field col s12">
                              <%= f.collection_select :district_id, District.all, :id, :name,  {prompt: "Chọn Quận"}, class: 'validate', :required => true, aria: {require: true} %>
                              <label>Quận bạn sống</label>
                        </div>
                  </div>
                  <div class="row">
                        <%= f.submit "Cập nhật thông tin" ,class: "btn waves-effect waves-light", style: "width: 100%;" %>
                  </div>
                                   
                              <% end %>
                                                </div>
                                          </div>
                                    </div>
                              </div>
                             
                              <!-- //////////////////////////////////////////////////////////////////////////// -->
                        </div>
                        <!--end container-->
                  </section>
                  <!-- END CONTENT -->
                  <!-- START RIGHT SIDEBAR NAV-->

                  <!-- END RIGHT SIDEBAR NAV-->
            </div>
            <!-- END WRAPPER -->
      </div>
      <!-- END MAIN -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START FOOTER -->
      </main>
      <%= render 'admin_restaurants/footer' %>


