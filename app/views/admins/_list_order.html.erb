 <% @orders.each do |order| %>
                                                                  <tr>
                                                                        <th style="text-align: center"><%= order.buyer.username %></th>
                                                                        <th style="text-align: center"><%= order.total_all_price %></th>
                                                                        <th style="text-align: center"><%= order.shipper.username unless order.shipper.nil? %></th>
                                                                        <th style="text-align: center"><%= order.order_type.name %></th>
                                                                        <th style="text-align: center">
                                                                              <% if order.order_type.id == 2%>
                                                                              <%= link_to "Chọn shipper", shipper_edit_path(order), method: :get %>
                                                                             <% end %>
                                                                        </th>
                                                                        <th style="text-align: center">
                                                                              <% unless order.order_type.id == 4%>
                                                                                    <%= link_to " <i class='material-icons pull-right'>delete_forever</i>".html_safe, order_change_status_destroy_path(order), method: :post, data: {confirm: "Bạn chắc chắn chứ?"} %>
                                                                              <% end %>
                                                                        </th>
                                                                  </tr>
                                                                  <% end %>