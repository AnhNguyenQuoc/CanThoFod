 <%# <meta http-equiv="Refresh" content="30"> %>
 <!-- Start Page Loading -->
      <div id="loader-wrapper">
            <div id="loader"></div>
            <div class="loader-section section-left"></div>
            <div class="loader-section section-right"></div>
      </div>
      <!-- End Page Loading -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START HEADER -->
     <%= render 'admin_restaurants/header' %>
      <!-- END HEADER -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START MAIN -->
      <div id="main">
            <!-- START WRAPPER -->
            <div class="wrapper">
                  <!-- START LEFT SIDEBAR NAV-->
                  <%= render 'admins/sidebar' %>
                  <!-- END LEFT SIDEBAR NAV-->
                  <!-- //////////////////////////////////////////////////////////////////////////// -->
                  <!-- START CONTENT -->
                  <section id="content">
                        <!--start container-->
                        <div class="container">
                              <!--card stats start-->
                              <div class="row">
                                    <div class="col s12">
                                         
                                          <div class="card" style="height: 500px">
                                                <div class="card-content">
                                                      <span class="card-title">Tạo mới mã khuyến mãi</span>
                                                       <%= form_for :coupon do |f| %>
                                                            <%= render 'layout_extends/error', object: @coupon %>
                                                            <div class="row">
                                                                  <div class="input-field col s12">
                                                                        <%= f.text_field :code, class: 'form-control' %>
                                                                        <%= f.label :code, "Mã khuyến mãi", class: "active" %>
                                                                  </div>
                                                            </div>

                                                                                                                        <div class="row">
                                                                  <div class="input-field col s12">
                                                                        <%= f.number_field :amount, class: 'form-control' %>
                                                                        <%= f.label :amount, "Phần trăm khuyễn mãi" %>
                                                                  </div>
                                                            </div>

                                                            <div class="row">
                                                                  <div class="input-field col s12">
                                                                        <%= f.text_field :expiration, class: 'datepicker' %>
                                                                        <%= f.label :expiration, "Thời gian hết hạn" %>
                                                                  </div>
                                                            </div>


                                                        
                                                            
                                                            <div class="row">
                                                                  <%= link_to "Trờ về", admin_coupons_path, class: "waves-effect waves-teal btn-flat", method: :get %>
                                                                  <%= f.submit "Xác nhận", class: "btn waves-effect waves-light", style: "float: right; margin-right: 20px"%>
                                                            </div>
                                                      <% end %>
                                                </div>
                                          </div>
                                    </div>
                              </div>
                             
                              <!-- //////////////////////////////////////////////////////////////////////////// -->
                        </div>
                        <!--end container-->
                  </section>
                  <!-- END CONTENT -->
                  <!-- START RIGHT SIDEBAR NAV-->

                  <!-- END RIGHT SIDEBAR NAV-->
            </div>
            <!-- END WRAPPER -->
      </div>
      <!-- END MAIN -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START FOOTER -->
      <%= render 'admin_restaurants/footer' %>


