<%# <meta http-equiv="Refresh" content="30"> %>
 <!-- Start Page Loading -->
      <div id="loader-wrapper">
            <div id="loader"></div>
            <div class="loader-section section-left"></div>
            <div class="loader-section section-right"></div>
      </div>
      <!-- End Page Loading -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START HEADER -->
     <%= render 'admin_restaurants/header' %>
      <!-- END HEADER -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START MAIN -->
      <div id="main">
            <!-- START WRAPPER -->
            <div class="wrapper">
                  <!-- START LEFT SIDEBAR NAV-->
                  <%= render 'admins/sidebar' %>
                  <!-- END LEFT SIDEBAR NAV-->
                  <!-- //////////////////////////////////////////////////////////////////////////// -->
                  <!-- START CONTENT -->
                  <section id="content">
                        <!--start container-->
                        <div class="container">
                              <!--card stats start-->
                              <div class="row">
                                    <div class="col s12">   
                                          <div class="card blue-grey darken-1">
                                                <div class="card-content white-text">
                                                <span class="card-title">Danh sách mã khuyến mãi</span>
                                                <%= link_to "Tạo mới", admin_coupons_tao_moi_path, method: :get, class: "btn"%>
                                                 <table class="centered" id="table-user">
                                                            <thead>
                                                            <tr>
                                                                  <th>#</th>
                                                                  <th>Code</th>
                                                                  <th>Phần trăm giảm giá</th>
                                                                  <th>Thời hạn</th>
                                                                  <th>Hành động</th>
                                                            </tr>
                                                            </thead>

                                                            <tbody id="coupon-table">
                                                                  <%= render 'list_coupon' %>
                                                            </tbody>
                                                            </table>
            
                                          </div>
                                    </div>
                              </div>
                             
                              <!-- //////////////////////////////////////////////////////////////////////////// -->
                        </div>
                        <!--end container-->
                  </section>
                  <!-- END CONTENT -->
                  <!-- START RIGHT SIDEBAR NAV-->

                  <!-- END RIGHT SIDEBAR NAV-->
            </div>
            <!-- END WRAPPER -->
      </div>
      <!-- END MAIN -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START FOOTER -->
      <%= render 'admin_restaurants/footer' %>


<script>
$(document).ready(function() {
  $("#table-user").dataTable({
        pagingType: "simple",
        language: {
            paginate: {
                previous: "<",
                next: ">"
            }
        },
        responsive: true,
        language: {
              lengthMenu: "Hiển thị _MENU_ cửa hàng mỗi trang",
              zeroRecords: "Không có cửa hàng nào",
              info: "Đang hiện _PAGE_ trang trên _PAGES_",
              infoEmpty: "Không có cửa hàng",
              search: "Tìm Kiếm:",
              paginate: {
                    first: "Đầu tiên",
                    last: "Cuối cùng",
                    next: "Tiếp theo",
                    previous: "Trở lại"
              }
        }
  });
});
</script>