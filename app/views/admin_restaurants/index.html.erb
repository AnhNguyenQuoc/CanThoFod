 <%# <meta http-equiv="Refresh" content="30"> %>
 <!-- Start Page Loading -->
      <div id="loader-wrapper">
            <div id="loader"></div>
            <div class="loader-section section-left"></div>
            <div class="loader-section section-right"></div>
      </div>
      <!-- End Page Loading -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START HEADER -->
     <%= render 'header' %>
      <!-- END HEADER -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START MAIN -->
      <div id="main">
            <!-- START WRAPPER -->
            <div class="wrapper">
                  <!-- START LEFT SIDEBAR NAV-->
                  <%= render 'sidebar' %>
                  <!-- END LEFT SIDEBAR NAV-->
                  <!-- //////////////////////////////////////////////////////////////////////////// -->
                  <!-- START CONTENT -->
                  <section id="content">
                        <!--start container-->
                        <div class="container">
                              <!--card stats start-->
                              <div id="card-stats">
                                    <div class="row mt-1">
                                          <div class="col s12 m4">
                                                <div class="card gradient-45deg-light-blue-cyan gradient-shadow min-height-100 white-text">
                                                      <div class="padding-4">
                                                            <div class="col s7 m7">
                                                                  <i class="material-icons mt-5">add_shopping_cart</i>
                                                                  <p>Đơn hàng mới</p>
                                                            </div>
                                                            <div class="col s5 m5 right-align">
                                                                  <h5 class="mb-0"><%= @orders %></h5>
                                                                  <p class="no-margin">Tổng</p>
                                                            </div>
                                                      </div>
                                                </div>
                                          </div>
                                          <div class="col s12 m4 ">
                                                <div class="card gradient-45deg-green-teal gradient-shadow min-height-100 white-text">
                                                      <div class="padding-4">
                                                            <div class="col s7 m7">
                                                                  <i class="material-icons mt-5">attach_money</i>
                                                                  <p>Thu nhập</p>
                                                            </div>
                                                            <div class="col s5 m5 right-align">
                                                                  <h5 class="mb-0"><%= number_to_currency_vnd(@total) %></h5>
                                                                  <p class="no-margin">Tổng</p>
                                                            </div>
                                                      </div>
                                                </div>
                                          </div>
                                          <div class="col s12 m4">
                                                <div class="card gradient-45deg-amber-amber gradient-shadow min-height-100 white-text">
                                                      <div class="padding-4">
                                                            <div class="col s7 m7">
                                                                  <i class="material-icons mt-5">local_dining</i>
                                                                  <p>Sản phẩm</p>
                                                            </div>
                                                            <div class="col s5 m5 right-align">
                                                                  <h5 class="mb-0"><%= @products %></h5>
                                                                  <p class="no-margin">Tổng</p>
                                                            </div>
                                                      </div>
                                                </div>
                                          </div>
                                    </div>
                              </div>

                              <div class="row">
                                    <div class="col s12">
                                          <div class="card">
                                                <div class="card-content">
                                                       <span class="card-title">Danh sách đơn hàng mới cập nhật</span>
                                                        <table>
                                                            <thead>
                                                            <tr>
                                                                  <th>#</th>
                                                                  <th>Tên người mua</th>
                                                                  <th>Tổng tiền</th>
                                                                  <th>Tình trạng</th>
                                                                  <th>Người giao hàng</th>
                                                            </tr>
                                                            </thead>

                                                            <tbody>
                                                            <% @order.each do |order| %>
                                                            <tr>
                                                                  <td><%= order.id%></td>
                                                                  <td><%= order.buyer.username %></td>
                                                                  <td><%= order.total %></td>
                                                                  <td><%= order.order_type.name %></td>
                                                                  <td><%= order.shipper ? order.shipper.username : "Chưa có người giao hàng" %></td>
                                                            </tr>
                                                            <% end %>
                                                            </tbody>
                                                      </table>
                                                </div>
                                          </div>
                                    </div>
                              </div>

                              <!-- //////////////////////////////////////////////////////////////////////////// -->
                        </div>
                        <!--end container-->
                  </section>
                  <!-- END CONTENT -->
                  <!-- START RIGHT SIDEBAR NAV-->

                  <!-- END RIGHT SIDEBAR NAV-->
            </div>
            <!-- END WRAPPER -->
      </div>
      <!-- END MAIN -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START FOOTER -->
      <%= render 'footer' %>

