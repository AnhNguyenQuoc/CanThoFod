 <%# <meta http-equiv="Refresh" content="30"> %>
 <!-- Start Page Loading -->
      <div id="loader-wrapper">
            <div id="loader"></div>
            <div class="loader-section section-left"></div>
            <div class="loader-section section-right"></div>
      </div>
      <!-- End Page Loading -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START HEADER -->
     <%= render 'header' %>
     <main>
      <!-- END HEADER -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START MAIN -->
      <div id="main">
            <!-- START WRAPPER -->
            <div class="wrapper">
                  <!-- START LEFT SIDEBAR NAV-->
                  <%= render 'sidebar' %>
                  <!-- END LEFT SIDEBAR NAV-->
                  <!-- //////////////////////////////////////////////////////////////////////////// -->
                  <!-- START CONTENT -->
                  <section id="content">
                        <!--start container-->
                        <div class="container">
                              <!--card stats start-->
                              <div class="row">
                              <div class="row">
                                    <div class="col s12">
                                         <div id="admin" class="col s12">
                                                <div class="card material-table">
                                                      <div class="table-header">
                                                      <span class="table-title">Danh sách đơn hàng</span>
                                                      <div class="actions">
                                                      <a class="search-toggle waves-effect btn-flat nopadding"><i class="material-icons">search</i></a>
                                                      </div>
                                                      </div>
                                                      <table id="datatable" class="centered responsive-table">
                                                      <thead>
                                                            <tr>
                                                      <th>Tên người đặt</th>
                                                      <th>Tổng tiền</th>
                                                      <th>Ghi chú</th>
                                                      <th style="width: 35%">Đơn hàng</th>
                                                      <th style="width: 13%">Tình trạng</th>
                                                      <th>Xác nhận</th>
                                                            </tr>
                                                      </thead>
                                                      <tbody>
                                                      <%= render partial: 'list_order', collection: @orders, as: :order %>
                                                      </tbody>
                                                      </table>
                                                </div>
                                                </div>
                                                </div>

                                    </div>
                              </div>

                              <!-- //////////////////////////////////////////////////////////////////////////// -->
                        </div>
                        <!--end container-->
                  </section>
                  <!-- END CONTENT -->
                  <!-- START RIGHT SIDEBAR NAV-->

                  <!-- END RIGHT SIDEBAR NAV-->
            </div>
            <!-- END WRAPPER -->
      </div>
      <!-- END MAIN -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START FOOTER -->
      </main>
      <%= render 'footer' %>

<script>

$(document).ready(function() {
          $('.search-toggle').click(function() {
      if ($('.hiddensearch').css('display') == 'none')
        $('.hiddensearch').slideDown();
      else
        $('.hiddensearch').slideUp();
    });
  $('#datatable').dataTable({
    "oLanguage": {
      "sStripClasses": "",
      "sSearch": "",
      "sSearchPlaceholder": "Nhập từ tìm kiếm ở đây",
      "sInfo": "_START_ -_END_ of _TOTAL_",
      "sLengthMenu": '<span>Dữ liệu mỗi trang là:</span><select class="browser-default">' +
        '<option value="10">10</option>' +
        '<option value="20">20</option>' +
        '<option value="30">30</option>' +
        '<option value="40">40</option>' +
        '<option value="50">50</option>' +
        '<option value="-1">Tất cả</option>' +
        '</select></div>'
    },
    bAutoWidth: false
  });

});
</script>