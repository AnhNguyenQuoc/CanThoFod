 <%# <meta http-equiv="Refresh" content="30"> %>
 <!-- Start Page Loading -->
      <div id="loader-wrapper">
            <div id="loader"></div>
            <div class="loader-section section-left"></div>
            <div class="loader-section section-right"></div>
      </div>
      <!-- End Page Loading -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START HEADER -->
     <%= render 'header' %>
      <!-- END HEADER -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START MAIN -->
      <div id="main">
            <!-- START WRAPPER -->
            <div class="wrapper">
                  <!-- START LEFT SIDEBAR NAV-->
                  <%= render 'sidebar' %>
                  <!-- END LEFT SIDEBAR NAV-->
                  <!-- //////////////////////////////////////////////////////////////////////////// -->
                  <!-- START CONTENT -->
                  <section id="content">
                        <!--start container-->
                        <div class="container">
                              <!--card stats start-->
                              <div class="row">
                                    <div class="col s4">
                                          <h4>Danh sách đơn hàng</h4>
                                    </div>

                              </div>
                              <div class="row">
                              <div class="row">
                                    <div class="col s12">
                                         <table class="bordered highlight centered" id="table-order">
                                                <thead>
                                                <tr>
                                                      <th>Tên người đặt</th>
                                                      <th>SĐT</th>
                                                      <th>Tổng tiền</th>
                                                      <th>Ghi chú</th>
                                                      <th>Đơn hàng</th>
                                                      <th style="width: 13%">Tình trạng</th>
                                                      <th>Xác nhận</th>
                                                </tr>
                                                </thead>

                                                <tbody id="list-order">
                                                      <%= render 'list_order' %>
                                                </tbody>
                                          </table>

                                    </div>
                              </div>

                              <!-- //////////////////////////////////////////////////////////////////////////// -->
                        </div>
                        <!--end container-->
                  </section>
                  <!-- END CONTENT -->
                  <!-- START RIGHT SIDEBAR NAV-->

                  <!-- END RIGHT SIDEBAR NAV-->
            </div>
            <!-- END WRAPPER -->
      </div>
      <!-- END MAIN -->
      <!-- //////////////////////////////////////////////////////////////////////////// -->
      <!-- START FOOTER -->
      <%= render 'footer' %>

<script>
$(document).ready(function() {
  $("#table-order").dataTable({
        pagingType: "simple",
        language: {
            paginate: {
                previous: "<",
                next: ">"
            }
        },
        responsive: true,
        language: {
              lengthMenu: "Hiển thị _MENU_ cửa hàng mỗi trang",
              zeroRecords: "Không có cửa hàng nào",
              info: "Đang hiện _PAGE_ trang trên _PAGES_",
              infoEmpty: "Không có cửa hàng",
              search: "Tìm Kiếm:",
              paginate: {
                    first: "Đầu tiên",
                    last: "Cuối cùng",
                    next: "Tiếp theo",
                    previous: "Trở lại"
              }
        }
  });
});
</script>