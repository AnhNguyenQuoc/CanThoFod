<% if @restaurants.count > 0 %>
$('#restaurants').stop().animate({
    opacity: 0.0
}, 500, function(){
    $(this).html("<%= escape_javascript(render partial: 'restaurant_item', collection: @restaurants, as: :restaurant ) %>").animate({
        opacity: 1
    })
    $('#pagination-list-restaurant').html("<%= j paginate(@restaurants, remote: true) %>")
})
<% else %>
$('#restaurants').stop().animate({
    opacity: 0.0
}, 500, function(){
    $(this).html("Hiện không có cửa hàng bạn tìm kiếm").animate({
        opacity: 1
    })
    $('#pagination-list-restaurant').html("<%= j paginate(@restaurants, remote: true) %>")
})
<% end %>
