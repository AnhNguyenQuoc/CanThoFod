     <%= render 'layout_extends/header' %>
     
      <section class="main-restaurant" style="padding-top: 5%;">
            <div class="container">
                  <div class="row">
                        <div class="col m8 s12">
                              <nav>
                                    <div class="nav-wrapper" >
                                          <div class="col s12">
                                                <%= link_to "Home", root_path, class: "breadcrumb"%>
                                                <%= link_to "Cửa hàng", restaurants_path, class: "breadcrumb"%>
                                                <%= link_to @restaurant.name, @restaurant, class: "breadcrumb"%>
                                          </div>
                                    </div>
                              </nav>
                              <div class="main-restaurant-text">
                                    <h1><%= @restaurant.name%></h1>

                                    <div>
                                          <h6>Địa chỉ </h6><span><%= @restaurant.address %> - <%= @restaurant.district.name %> </span>
                                          <br />
                                          <h6>Phone</h6><span><%= @restaurant.phone %></span>
                                          <br />
                                          <h6>Loại</h6><span>Nhà hàng</span>
                                          <br />
                                          <h6>Mô tả</h6><span><%= @restaurant.description%></span>
                                    </div>
                              </div>
                        </div>
                        <div class="col m4 s12">
                              <div class="img-main-restaurant mt-2">
                                    <%= image_tag @restaurant.image, class: "responsive-img", style: "height: 300px"%>
                              </div>
                              <div class="img-main-restaurant-text">
                                    <span>Mở cửa từ</span>
                                    <br>
                                    <span><%= @restaurant.timeopen.strftime('%H:%M') %>  - <%= @restaurant.timeclose.strftime('%H:%M') %></span>
                              </div>
                        </div>
                  </div>
            </div>
      </section>

            <section class="main-menu">
            <div>
                  <div class="row">
                        <div class="col s12 m6 offset-m1 ">
                              <h3>Menu</h3>
                        </div>
                  </div>
                  <div class="row">
                        <div class="col m6 s12 offset-m1">
                              <div class="menu-item mt-3">
                              <% @products.each do |p|%>
                                    <div class="col s6 m4">
                                          <div class="card">
                                                <div class="card-image waves-effect waves-block waves-light">
                                                      <%= image_tag p.image, class: "activator", style: "height: 100px"%>
                                                </div>
                                                <div class="card-content">
                                                      <span class="card-title activator grey-text text-darken-4"><%= p.name %><i class="material-icons right">more_vert</i></span>
                                                      <span><%= number_to_currency_vnd(p.price) %></span>
                                                      <%# <p><button class=''>Đặt Hàng</button></p> %>
                                                      <p><%= link_to "Đặt hàng",  line_items_path(product_id: p), method: :post, remote: true,  :class => "blue waves-effect waves-light btn"%></p>
                                                </div>
                                                <div class="card-reveal">
                                                      <span class="card-title grey-text text-darken-4"><%= p.name %><i class="material-icons right">close</i></span>
                                                      <p><%= p.description  %></p>
                                                </div>
                                          </div>
                                    </div>
                              <% end %>
                              
                              </div>
                        </div>
                        <div class="col m4 s12 checkout">       
                              <a class="waves-effect waves-light btn modal-trigger" href="#modal1" style="width: 100%">Đặt hàng</a>        
                              <div id="modal1" class="modal" style="width: 80%">
                                    <div class="modal-content">
                                          <h4>Thông tin đặt hàng</h4>
                                          <div class="row">
                                                <div class='col m6 s12 cart'>
                                                       <%= render 'cart' %>
                                                      
                                                </div>

                                                <div class='col m6 s12'>
                                                      
                                                </div>
                                          </div>
                                    </div>
                                    <div class="modal-footer">
                                          <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
                                    </div>
                              </div>   
                              <div class="list-checkout-item cart">
                                          <%= render 'cart' %>
                              </div>
                        </div>
                  </div>
            </div>
      </section>



           <%= render 'layout_extends/footer' %>