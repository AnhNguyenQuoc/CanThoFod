     <%= render 'layout_extends/header' %>
     
      <section class="main-restaurant" style="padding-top: 5%;">
            <div class="container" style="width: 80%">
                  <div class="row">
                        <div class="col m8 s12">
                              <nav>
                                    <div class="nav-wrapper" >
                                          <div class="col s12">
                                                <%= link_to "Home", root_path, class: "breadcrumb"%>
                                                <%= link_to "Cửa hàng", restaurants_path, class: "breadcrumb"%>
                                                <%= link_to @restaurant.name, @restaurant, class: "breadcrumb"%>
                                          </div>
                                    </div>
                              </nav>
                              <div class="main-restaurant-text">
                                    <h1><%= @restaurant.name%><span style="float: right; background: red; padding: 10px; color: white;"><%= @restaurant.avg_rating %></span></h1>

                                    <div>
                                          <h6>Địa chỉ </h6><span><%= @restaurant.address %> - <%= @restaurant.district.name %> </span>
                                          <br />
                                          <h6>Phone</h6><span><%= @restaurant.phone %></span>
                                          <br />
                                          <h6>Loại</h6><span><%= @restaurant.restaurant_type.name %></span>
                                          <br />
                                          <h6>Mô tả</h6><span><%= @restaurant.description%></span>
                                    </div>
                              </div>
                        </div>
                        <div class="col m4 s12">
                              <div class="img-main-restaurant mt-2">
                                    <%= image_tag @restaurant.image, class: "responsive-img", style: "height: 300px"%>
                              </div>
                              <div class="img-main-restaurant-text">
                                    <span>Mở cửa từ</span>
                                    <br>
                                    <span><%= @restaurant.timeopen.strftime('%H:%M') %>  - <%= @restaurant.timeclose.strftime('%H:%M') %></span>
                              </div>
                        </div>
                  </div>
            </div>
      </section>

            <section class="main-menu">
            <div>
                  <div class="row">
                        <div class="col s12 m6 offset-m1 ">
                              <h3>Menu</h3>
                        </div>
                  </div>
                  <div class="row">
                        <div class="col m2">
                              <div class="collection">
                                    <%= link_to "Đặt món", restaurant_dat_mon_path(@restaurant), class: "collection-item active"%>
                                    <%= link_to "Nhận xét", restaurant_comment_path(@restaurant), class: "collection-item"%>
                              </div>
                        </div>
                        <div class="col m6 s12">
                              <div class="menu-item mt-3">
                              <% @products.each do |p|%>
                                    <div class="col s6 m4">
                                          <div class="card">
                                                <div class="card-image waves-effect waves-block waves-light">
                                                      <%= image_tag p.image, class: "activator", style: "height: 100px"%>
                                                </div>
                                                <div class="card-content">
                                                      <span class="card-title activator grey-text text-darken-4"><%= p.name %><i class="material-icons right">more_vert</i></span>
                                                      <div class="divider"></div>
                                                      <span><%= number_to_currency_vnd(p.price) %></span>
                                                      <%# <p><button class=''>Đặt Hàng</button></p> %>
                                                      <p><%= link_to "Đặt hàng",  line_items_path(cart_id: @current_cart,product_id: p), method: :post, remote: true,  :class => "blue waves-effect waves-light btn"%></p>
                                                </div>
                                                <div class="card-reveal">
                                                      <span class="card-title grey-text text-darken-4"><%= p.name %><i class="material-icons right">close</i></span>
                                                      <p><%= p.description  %></p>
                                                </div>
                                          </div>
                                    </div>
                              <% end %>
                              
                              </div>
                        </div>
                        <div class="col m4 s12 checkout">
                              <div id="checkout">
                                    <%= render 'model_order' %>
                              </div>       
                        
                              <div id="dathang" class="modal" style="width: 80%">
                                    <div class="modal-content">
                                          <h4>Thông tin đặt hàng</h4>
                                          <div class="row">
                                                <div class='col m6 s12 cart'>
                                                      <%= render 'restaurants/cart' %>                           
                                                </div>
                                                <div class='col m6 s12'>
                                                      <h2 class="flow-text">Hình thức thanh toán</h2>
                                                      <p>
                                                            <input class="with-gap" name="group1" type="radio" id="cod" value="0" />
                                                            <label for="cod">COD</label>
                                                      </p>
                                                      <p>
                                                            <input class="with-gap" name="group1" type="radio" id="payments" value="1"  />
                                                            <label for="payments">Stripe</label>
                                                      </p>
                                                      <%= form_for @order, html: {id: "formcod"} do |f|%>
                                                            <%= f.hidden_field :order_type_id, value: 1%>
                                                            <%= f.hidden_field :payments, value: 1%>
                                                            <div class="row">
                                                                  <div class="input-field col s12">
                                                                        <%= f.text_area :note, class: "materialize-textarea"%>
                                                                        <%= f.label :note, "Ghi chú"%>
                                                                  </div>
                                                                        <small>* Chúng tôi sẽ lấy thông tin giao hàng ở thông tin cá nhân của bạn. Nếu có gì thay đổi vui lòng ghi vào ghi chú</small>
                                                            </div>
                                                            <%= f.submit "Đặt hàng", class: "modal-action waves-effect waves-blue btn center-align", style: "width: 100%"%>
                                                      <% end %>
                                                      <%= form_for @order, html: {id: "formpayments"} do |f|%>
                                                            <%= f.hidden_field :order_type_id, value: 2%>
                                                            <%= f.hidden_field :payments, value: 2%>
                                                            <div class="row">
                                                                  <div class="input-field col s12">
                                                                        <%= f.text_area :note, class: "materialize-textarea"%>
                                                                        <%= f.label :note, "Ghi chú"%>
                                                                  </div>
                                                                        <small>* Chúng tôi sẽ lấy thông tin giao hàng ở thông tin cá nhân của bạn. Nếu có gì thay đổi vui lòng ghi vào ghi chú</small>
                                                            </div>
                                                            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                                                                        data-key="<%= Rails.application.secrets.stripe_publishable_key %>"
                                                                        data-description= "Mã đơn hàng #<%= Order.last.id + 1 %>"
                                                                        data-amount= <%= @current_cart.total_all_price %>
                                                                        data-currency="vnd"
                                                                        data-locale="auto"
                                                                        data-email=<%= @current_user.email%>
                                                                        data-label="Thanh toán"
                                                                        ></script>
                                                      <% end %>
                                                </div>
                                          </div>
                                    </div>  
                                    <div class="modal-footer">
                                          <a class="modal-action modal-close waves-effect waves-green btn-flat ">Agree</a>
                                    </div>
                              </div>
                              <div class="list-checkout-item cart">
                                    <%= render 'cart' %>
                              </div>
                        </div>
                  </div>
            </div>
      </section>



           <%= render 'layout_extends/footer' %>


<script>
       $('#formcod').hide();
      $('#formpayments').hide();
      $('input[type=radio][name=group1]').change(function(){
            if(this.value == '0' ){
                  $('#formcod').show();
                  $('#formpayments').hide();
            } else {
                   $('#formcod').hide();
                  $('#formpayments').show();
            }
      })
      
</script>