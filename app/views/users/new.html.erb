<%= render 'layout_extends/header' %>


 <section id="login-form">
            <div class="container" style="width: 60%">
                  <div class="row justify-content-md-center mt-5">
                        <div class="col m5 s12">
                              <h1 class="text-login-form">Welcome newbie</h1>
                        </div>
                  </div>
                  <div class="row justify-content-md-center">
            <%= form_for(@user, url: signup_path, :html => {:class => 'col s12'}) do |f| %>

                  <%= render 'layout_extends/error', object: f.object %>
                  
                  <div class="row">
                        <div class="input-field col s12">
                              <%= f.text_field :username, class: 'form-control' %>
                              <%= f.label :username, "Họ và tên" %>
                        </div>
                  </div>


                  <div class="row">
                        <div class="input-field col s12">
                              <%= f.email_field :email, class: 'form-control' %>
                              <%= f.label :email, "Email" %>
                        </div>
                  </div>

                  <div class="row">
                        <div class="input-field col s12">
                              <%= f.label :password, "Mật khẩu" %>
                              <%= f.password_field :password, class: 'form-control' %>
                        </div>
                  </div>
                  
                  <div class="row">
                        <div class="input-field col s12">
                              <%= f.label :password_confirmation, "Xác nhận mật khẩu" %>
                              <%= f.password_field :password_confirmation, class: 'form-control' %>
                        </div>
                  </div>

                  <div class="row">
                        <div class="input-field col s12">
                              <%= f.label :phone, "SĐT" %>
                              <%= f.phone_field :phone, class: 'form-control' %>
                        </div>
                  </div>

                  <div class="row">
                        <div class="input-field col s12">
                              <%= f.label :address, "Địa chỉ" %>
                              <%= f.text_field :address, class: 'form-control' %>
                        </div>
                  </div>
                  <div class="row">
                        <div class="input-field col s12">
                              <%= f.collection_select :district_id, District.all, :id, :name,  {prompt: "Chọn Quận"} %>
                        </div>
                  </div>
                  <%= f.hidden_field :role_id, value: 1 %>
                  <div class="row">
                  <%= f.submit "Tạo tài khoản", class: "btn waves-effect waves-light", style: "width: 100%;"%>
                  </div>
            <% end %>
            <p>Nếu đã có tài khoản, nhấn
                  <%= link_to "vào đây", login_path%>
            </p>
               </div>
            </div>
      </section>
<%= render 'layout_extends/footer' %>